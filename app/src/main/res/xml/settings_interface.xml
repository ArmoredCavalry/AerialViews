<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="Interface Options">
                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="show_location"
                    app:title="@string/interface_show_location" />

                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="show_clock"
                    app:title="@string/interface_show_clock" />

                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="mute_videos"
                    app:title="@string/interface_mute_videos" />

                <CheckBoxPreference
                    app:defaultValue="false"
                    app:key="alt_text_position"
                    app:title="@string/interface_alt_text_position" />
        </PreferenceCategory>

</PreferenceScreen>
