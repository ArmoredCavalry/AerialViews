<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_video_source">
                <SwitchPreference
                    app:defaultValue="true"
                    app:key="apple_videos_enabled"
                    app:title="Enabled" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_settings">
                <ListPreference
                    app:dependency="apple_videos_enabled"
                    app:disableDependentsState="false"
                    app:defaultValue="@string/apple_videos_quality_default"
                    app:entries="@array/apple_videos_quality_entries"
                    app:entryValues="@array/apple_videos_quality_values"
                    app:key="apple_videos_quality"
                    app:title="@string/apple_videos_quality_title"
                    app:summary="@string/apple_videos_location_summary"
                    app:dialogTitle="@string/apple_videos_quality_summary" />

                <ListPreference
                    app:defaultValue="@string/apple_videos_location_default"
                    app:dependency="apple_videos_enabled"
                    app:disableDependentsState="false"
                    app:entries="@array/apple_videos_location_entries"
                    app:entryValues="@array/apple_videos_location_values"
                    app:key="apple_videos_location"
                    app:title="@string/apple_videos_location_title"
                    app:summary="@string/apple_videos_location_summary"
                    app:dialogTitle="@string/apple_videos_location_summary" />
        </PreferenceCategory>
</PreferenceScreen>
