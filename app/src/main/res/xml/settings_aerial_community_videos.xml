<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_video_source">
                <SwitchPreference
                    app:defaultValue="false"
                    app:key="aerial_community_videos_enabled"
                    app:title="Use Aerial Community videos" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_settings">
                <ListPreference
                    app:dependency="aerial_community_videos_enabled"
                    app:disableDependentsState="false"
                    app:defaultValue="@string/aerial_community_videos_quality_default"
                    app:entries="@array/aerial_community_videos_quality_entries"
                    app:entryValues="@array/aerial_community_videos_quality_values"
                    app:key="aerial_community_videos_quality"
                    app:title="@string/apple_videos_quality_title"
                    app:summary="@string/apple_videos_quality_summary"
                    app:dialogTitle="@string/apple_videos_quality_summary" />
        </PreferenceCategory>
</PreferenceScreen>
