<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_settings">
                <EditTextPreference
                    android:summary="@string/network_videos_hostname_summary"
                    android:key="network_videos_hostname"
                    android:selectAllOnFocus="true"
                    android:title="@string/network_videos_hostname_title" />

                <EditTextPreference
                    android:summary="@string/network_videos_sharename_summary"
                    android:key="network_videos_sharename"
                    android:title="@string/network_videos_sharename_title" />

                <EditTextPreference
                    android:summary="@string/network_videos_username_summary"
                    android:key="network_videos_username"
                    android:title="@string/network_videos_username_title" />

                <EditTextPreference
                    android:summary="@string/network_videos_password_summary"
                    android:key="network_videos_password"
                    android:title="@string/network_videos_password_title" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_actions">
                <Preference
                    android:title="Test connection settings"
                    android:key="network_videos_test_connection"
                    />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_debug">
                <Preference
                    app:summary="@string/settings_debug_warning" />

                <MultiSelectListPreference
                    app:key="network_videos_smb_dialects"
                    app:defaultValue="@array/network_videos_smb_dialects_default"
                    app:entries="@array/network_videos_smb_dialects_entries"
                    app:entryValues="@array/network_videos_smb_dialects_values"
                    app:title="@string/network_videos_smb_dialects_title"
                    app:summary="@string/network_videos_smb_dialects_summary"
                    app:dialogTitle="@string/network_videos_smb_dialects_title" />

                <CheckBoxPreference
                    app:defaultValue="false"
                    app:key="network_videos_enable_encryption"
                    app:summary="@string/network_videos_enable_encryption_summary"
                    app:title="@string/network_videos_enable_encryption_title" />
        </PreferenceCategory>

</PreferenceScreen>
