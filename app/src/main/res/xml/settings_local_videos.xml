<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_video_source">
                <SwitchPreference
                    app:defaultValue="false"
                    app:key="local_videos_enabled"
                    app:title="Enabled" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_settings">
                <CheckBoxPreference
                    app:dependency="local_videos_enabled"
                    app:disableDependentsState="false"
                    app:defaultValue="true"
                    app:key="local_videos_filename_location"
                    app:title="@string/local_videos_filename_location_title"
                    app:summary="@string/local_videos_filename_location_summary" />
        </PreferenceCategory>

</PreferenceScreen>
