<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/category_sources">
        <Preference
            app:title="@string/apple_videos_title"
            app:summary="@string/apple_videos_summary"
            app:fragment="com.codingbuffalo.aerialdream.ui.settings.AppleVideosFragment"/>

        <Preference
            app:title="@string/local_videos_title"
            app:summary="@string/local_videos_summary"
            app:fragment="com.codingbuffalo.aerialdream.ui.settings.LocalVideosFragment"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_settings">
        <Preference
            app:title="@string/interface_title"
            app:summary="@string/interface_summary"
            app:fragment="com.codingbuffalo.aerialdream.ui.settings.InterfaceFragment"/>

        <Preference
            app:title="@string/performance_title"
            app:summary="@string/performance_summary"
            app:fragment="com.codingbuffalo.aerialdream.ui.settings.PerformanceFragment"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_actions">
        <Preference app:title="@string/test_settings">
            <intent
                android:targetClass="com.codingbuffalo.aerialdream.ui.screensaver.TestActivity"
                android:targetPackage="com.codingbuffalo.aerialdream" />
        </Preference>

        <Preference
            app:key="activate_screensaver"
            app:title="@string/activate_screensaver" />
    </PreferenceCategory>

</PreferenceScreen>
