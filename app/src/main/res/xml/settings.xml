<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/category_sources">
        <Preference
            app:title="@string/apple_videos_title"
            app:summary="@string/apple_videos_summary"
            app:fragment="com.codingbuffalo.aerialdream.ui.settings.AppleVideosFragment"/>

        <Preference
            app:title="@string/local_videos_title"
            app:summary="@string/local_videos_summary"
            app:fragment="com.codingbuffalo.aerialdream.ui.settings.LocalVideosFragment"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_settings">
        <MultiSelectListPreference
            app:entries="@array/interface_options_entries"
            app:entryValues="@array/interface_options_values"
            app:defaultValue="@array/interface_options_defaults"
            app:key="ui_options"
            app:title="@string/interface_options"
            app:summary="@string/interface_options_summary"
            app:dialogTitle="@string/interface_options_summary" />

        <MultiSelectListPreference
            app:entries="@array/performance_options_entries"
            app:entryValues="@array/performance_options_values"
            app:defaultValue="@array/performance_options_defaults"
            app:key="perf_options"
            app:title="@string/performance_options"
            app:summary="@string/performance_options_summary"
            app:dialogTitle="@string/performance_options_summary" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_actions">
        <Preference app:title="@string/test_settings">
            <intent
                android:targetClass="com.codingbuffalo.aerialdream.ui.screensaver.TestActivity"
                android:targetPackage="com.codingbuffalo.aerialdream" />
        </Preference>

        <Preference
            app:key="system_options"
            app:title="@string/activate_screensaver" />
    </PreferenceCategory>

</PreferenceScreen>
