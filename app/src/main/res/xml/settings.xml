<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/category_settings">
        <Preference
            app:title="@string/settings_video_sources_title"
            app:summary="@string/settings_video_sources_summary"
            app:fragment="com.neilturner.aerialviews.ui.settings.SourcesFragment"/>

        <Preference
            app:title="@string/settings_customise_title"
            app:summary="@string/settings_customise_summary"
            app:fragment="com.neilturner.aerialviews.ui.settings.CustomiseFragment"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_actions">
        <Preference
            app:key="preview_screensaver"
            app:title="@string/settings_preview_screensaver" />

        <Preference
            app:key="system_options"
            app:title="@string/settings_system_options" />
    </PreferenceCategory>

</PreferenceScreen>
