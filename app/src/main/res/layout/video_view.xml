<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="android.view.Gravity" />

        <variable
            name="showLocation"
            type="boolean" />

        <variable
            name="usePoiText"
            type="boolean" />

        <variable
            name="showAltClock"
            type="boolean" />

        <variable
            name="altTextPosition"
            type="boolean" />

        <variable
            name="controller"
            type="android.widget.MediaController.MediaPlayerControl" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.neilturner.aerialviews.ui.screensaver.ExoPlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <TextClock
            android:id="@+id/altClock"
            style="@style/ClockText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="31dp"
            android:gravity="@{altTextPosition ? Gravity.START : Gravity.END}"
            android:paddingBottom="@{showLocation ? (usePoiText ? @dimen/extra_padding : @dimen/large_padding) : @dimen/small_padding}"
            android:visibility="@{showAltClock ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/location"
            style="@style/LocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="32dp"
            android:ellipsize="end"
            android:gravity="@{altTextPosition ? Gravity.START : Gravity.END}"
            android:lines="@{usePoiText ? 2 : 1}"
            android:visibility="@{showLocation ? View.VISIBLE : View.GONE}"
            tools:text="POI example Text" />

    </FrameLayout>

</layout>
