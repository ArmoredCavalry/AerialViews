<resources>
    
    <style name="SettingsTheme" parent="Theme.Leanback">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="DaydreamTheme" parent="SettingsTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="LoadingText">
        <item name="android:alpha">1</item>
    </style>

    <style name="ClockText">
        <item name="android:alpha">0.8</item>
        <item name="android:paddingRight">5px</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="LocationText">
        <item name="android:alpha">0.9</item>
        <item name="android:paddingRight">5px</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
